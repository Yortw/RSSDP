<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RssdpPackageTestMauiApp"
             xmlns:rssdp="clr-namespace:Rssdp;assembly=Rssdp"
						 x:Name="Page"
             x:Class="RssdpPackageTestMauiApp.MainPage"
             x:DataType="local:MainPage">

	<ListView BackgroundColor="WhiteSmoke" Margin="4" ItemsSource="{Binding Source={x:Reference Page}, Path=Devices}" HasUnevenRows="True">
		<ListView.ItemTemplate>
			<DataTemplate x:DataType="rssdp:DiscoveredSsdpDevice">
				<ViewCell>
					<StackLayout Orientation="Vertical" Padding="4">
						<Label Text="{Binding Usn}" FontAttributes="Bold" />
						<Label Text="{Binding DescriptionLocation}" />
					</StackLayout>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>

</ContentPage>